<?xml version="1.0" encoding="UTF-8"?>
<project>
  <set name="WIDTH" value="640"/>
  <set name="HEIGHT" value="480"/>

  <haxedef name="fdb" if="target_flash" />
  <haxedef name="network-sandbox" if="target_flash"/>

  <meta title="Battledore and Shuttlecock"
       package="net.noiseinstitute.battledore_and_shuttlecock"
       version="0"
       company="Daniel Cassidy"/>

  <app main="battledore_and_shuttlecock.Game" file="battledore-and-shuttlecock"/>

  <window width="${WIDTH}"
          height="${HEIGHT}"
          orientation="landscape"
          fps="60"
          background="#000000"
          resizable="true"
          hardware="false"
          vsync="true"/>

  <assets path="assets" include="*.mp3"/>
  <assets path="assets" include="*.ttf"/>

  <source name="src"/>
  <source name="lib/hopscotch/src"/>
  <source name="lib/kong/src"/>

  <haxelib name="openfl"/>
</project>